extends layout.pug

block content
  div( class="container section" )
    ul( class="tabs" )
      each sheet in sheets
        li( class="tab col s3" )
          a( href="#" + sheet.name class="green-text darken 1" )=sheet.name
    each sheet in sheets
      div( class="center row" id=sheet.name )
        iframe( src=`https://docs.google.com/spreadsheets/d/${ sheet.id }`
          height='75%' width='100%' )
  
  script( type='text/javascript' ).
    document.addEventListener( 'DOMContentLoaded', () => M.AutoInit() );
